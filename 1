import React, { useState } from 'react';
import { Card, CardContent, CardDescription, CardFooter, CardHeader, CardTitle } from "/components/ui/card";
import { Button } from "/components/ui/button";
import { Input } from "/components/ui/input";
import { Label } from "/components/ui/label";
import { Select, SelectContent, SelectItem, SelectTrigger, SelectValue } from "/components/ui/select";

const App = () => {
  const [username, setUsername] = useState('');
  const [platform, setPlatform] = useState('');
  const [result, setResult] = useState('');

  const handleCheck = () => {
    // Add logic to check for bot and buzzer accounts
    // For now, just return a dummy result
    setResult('Account is likely a bot');
  };

  return (
    <div className="flex flex-col items-center justify-center h-screen">
      <Card className="w-[400px]">
        <CardHeader>
          <CardTitle>Safer</CardTitle>
          <CardDescription>For Safer Healtier Digital Wellbeing</CardDescription>
        </CardHeader>
        <CardContent>
          <div className="flex flex-col space-y-4">
            <div className="flex flex-col space-y-2">
              <Label htmlFor="username">Username</Label>
              <Input id="username" value={username} onChange={(e) => setUsername(e.target.value)} />
            </div>
            <div className="flex flex-col space-y-2">
              <Label htmlFor="platform">Platform</Label>
              <Select>
                <SelectTrigger className="w-[180px]">
                  <SelectValue placeholder="Select Platform" />
                </SelectTrigger>
                <SelectContent>
                  <SelectItem value="tiktok" onClick={() => setPlatform('tiktok')}>TikTok</SelectItem>
                  <SelectItem value="x" onClick={() => setPlatform('x')}>X</SelectItem>
                  <SelectItem value="instagram" onClick={() => setPlatform('instagram')}>Instagram</SelectItem>
                  <SelectItem value="facebook" onClick={() => setPlatform('facebook')}>Facebook</SelectItem>
                </SelectContent>
              </Select>
            </div>
            <Button onClick={handleCheck}>Check</Button>
            {result && <p className="text-lg font-bold">{result}</p>}
          </div>
        </CardContent>
        <CardFooter>
          <p className="text-sm text-gray-500">Build by Eka Darma Putra</p>
        </CardFooter>
      </Card>
    </div>
  );
};

export default App;
